<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.usuario.ulpapp.resi_Fragment"
    android:background="@android:color/white">

    <ScrollView android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/contactoPortada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/white"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/NombreLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#264377"
                android:textAlignment="center"
                android:text="ULP Rectorado"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/dirULP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:textSize="16sp"

                android:paddingLeft="28dp"
                />
            <TextView
                android:id="@+id/telULP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="28dp"

                />
            <com.google.android.gms.maps.MapView
                android:id="@+id/mapULP"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"

                 />
                /////

            <TextView
                android:id="@+id/NombreLugarICT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#264377"
                android:textAlignment="center"
                android:text="ICT sede San Luis"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/dirICT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="28dp"
                />
            <TextView
                android:id="@+id/telICT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="28dp"

                />
            <com.google.android.gms.maps.MapView
                android:id="@+id/mapICT"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"

                />
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:weightSum="1.0">
                <TextView
                    android:id="@+id/WebSite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textAlignment="center"
                    android:text="Sitio web :"

                    android:textColor="@color/naranja"
                    android:textSize="18sp"
                    android:paddingTop="10dp"

                    android:layout_alignParentBottom="true" />
                <TextView
                    android:id="@+id/urlWebSite"
                    android:layout_weight=".3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#264377"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1.0">


            </RelativeLayout>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>
