<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.ulpapp.resi_Fragment">

    <ScrollView android:layout_height="fill_parent"
        android:layout_width="fill_parent">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/resiPortada"
                android:layout_width="fill_parent"
                android:layout_height="97dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:src="@mipmap/portada"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:text="RESIDENCIAS"
                android:textColor="#264377"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/resiDesc"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:textColor="#264377"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:text="OBJETIVOS"
                android:textColor="#264377"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/resiObj"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:text="COMODIDADES"
                android:textColor="#264377"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/resiComodidades"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:layout_weight="2.89" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:text="DOCUMENTACION"
                android:textColor="#264377"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/resiDocu"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:textColor="#264377"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
