<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.usuario.ulpapp.resi_Fragment"
    android:background="@android:color/white">

    <ScrollView android:layout_height="fill_parent"
        android:layout_width="fill_parent">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/resiPortada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/white"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/resiDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:text="Objetivos"
                android:textColor="#264377"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resiObj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:text="Comodidades"
                android:textColor="#264377"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resiComodidades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="2.89"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:text="Documentacion"
                android:textColor="#264377"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resiDocu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:text="Contacto"
                android:textColor="#264377"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resiContacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:textColorLink="#264377"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/resiUrlIngreso"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:textColorLink="#264377"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/resiUrlDdjj"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:textColorLink="#264377"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="false"
                    android:scrollbarThumbHorizontal="@drawable/style_croll">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/imgResi1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"/>

                        <ImageView
                            android:id="@+id/imgResi2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"/>

                        <ImageView
                            android:id="@+id/imgResi3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
